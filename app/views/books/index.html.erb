<h2 class="m-4">Black Lives matter</h2>
<div class="d-flex">
  <% @books_black_lives_matter.each do |book| %>
    <div class="ml-5">
      <% if !book.photo_url.nil? %>
        <div><%= image_tag book.photo_url %></div>
        <p><%=truncate(book.title,length: 20) %></p>
        <p><%=book.author %></p>
      <% end %>
    </div>
  <% end %>
</div>

